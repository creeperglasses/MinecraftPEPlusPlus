<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:translationZ="4dp"
	card_view:cardCornerRadius="4dp"
	android:background="#FAFAFA"
	android:layout_margin="32dp">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="384dp">

				<ImageView
					android:layout_height="match_parent"
					android:layout_width="match_parent"
					android:scaleType="centerCrop"
					android:fitsSystemWindows="true"
					android:id="@+id/con_show"/>

				<TextView
					android:layout_height="wrap_content"
					android:text="loading..."
					android:layout_width="wrap_content"
					android:textSize="24sp"
					android:textColor="#FAFAFA"
					android:layout_gravity="bottom|left"
					android:layout_margin="16dp"
					android:id="@+id/con_maintitle"/>

			</FrameLayout>

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">

					<TextView
						android:layout_height="wrap_content"
						android:text="loading..."
						android:layout_width="wrap_content"
						android:textSize="14sp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="16dp"
						android:layout_marginLeft="16dp"
						android:textColor="#BDBDBD"
						android:id="@+id/con_by"/>

					<TextView
						android:layout_height="wrap_content"
						android:text="loading..."
						android:layout_width="wrap_content"
						android:textSize="16sp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="16dp"
						android:layout_marginLeft="16dp"
						android:id="@+id/con_int"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="right"
					android:background="#FAFAFA"
					android:layout_gravity="bottom">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="horizontal"
						android:gravity="right"
						android:background="#FAFAFA"
						android:layout_margin="4dp">

						<TextView
							android:layout_height="wrap_content"
							android:text="BACK"
							android:layout_width="wrap_content"
							android:textSize="14sp"
							android:padding="8dp"
							android:clickable="true"
							android:textColor="#009688"
							android:background="@drawable/con_click"/>

						<TextView
							android:layout_height="wrap_content"
							android:text="VIEW"
							android:clickable="true"
							android:layout_width="wrap_content"
							android:textSize="14sp"
							android:padding="8dp"
							android:textColor="#009688"
							android:background="@drawable/con_click"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginBottom="4dp"
					android:layout_gravity="bottom">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="horizontal"
						android:gravity="left|center"
						android:layout_margin="4dp">

						<ImageView
							android:layout_height="24dp"
							android:layout_width="24dp"
							android:src="@drawable/grade"
							android:id="@+id/gradle"
							android:clickable="true"
							android:background="@drawable/con_click"
							android:layout_marginLeft="8dp"
							android:layout_gravity="center"/>

						<ImageView
							android:layout_height="24dp"
							android:layout_width="24dp"
							android:src="@drawable/share"
							android:clickable="true"
							android:id="@+id/share"
							android:background="@drawable/con_click"
							android:layout_marginLeft="16dp"
							android:layout_gravity="center"
							android:onClick="to_share"/>

					</LinearLayout>

				</LinearLayout>

			</FrameLayout>

		</LinearLayout>

		<android.support.design.widget.FloatingActionButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:src="@drawable/get"
			android:onClick="surl"
			app:borderWidth="0dp"
			android:layout_gravity="right"
			android:layout_marginRight="8dp"
			android:layout_marginTop="336dp"/>

	</FrameLayout>

</android.support.v7.widget.CardView>

